<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">

    <!-- 게시판 resultMap -->
    <resultMap type="board" id="boardMap">
        <id column="BOARD_NO" property="boardNo"/>
        <result column="BOARD_TITLE" property="boardTitle"/>
        <result column="BOARD_CONTENT" property="boardContent"/>
        <result column="ORI_FILE_NAME" property="oriFileName"/>
        <result column="REG_ID" property="regId"/>
        <result column="REG_DTIME" property="regDtime"/>
    </resultMap>

    <!-- 전체 게시판 조회 -->
    <select id="boardAll" resultMap="boardMap">
        SELECT * FROM board
    </select>

    <!-- 부서별 게시판 조회 -->
    <select id="boardPart" resultMap="boardMap">
        SELECT * FROM board
    </select>

    <!-- 새로운 게시글 저장 -->
    <insert id="save" parameterType="board">
        INSERT INTO board (BOARD_TITLE, BOARD_CONTENT, ORI_FILE_NAME, REG_ID, REG_DTIME)
        VALUES (#{boardTitle}, #{boardContent}, #{oriFileName}, #{regId}, #{regDtime})
    </insert>

</mapper>